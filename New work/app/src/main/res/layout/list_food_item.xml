<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/iv_food"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#fff30d"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:padding="5dp"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_food"
        android:text="美食名字美食名字美食名字美食名字美食名字美食名字美食名字美食名字"
        android:maxLines="2"
        android:textColor="#000"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@id/tv_name"
        android:text="收藏数：100次"
        android:textColor="#f6ff43"
        android:textSize="14sp"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/btn_subtract"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_number"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#DDD"
                android:gravity="center"
                android:text=""
                android:textSize="20sp"/>

            <Button
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/btn_add"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="#000"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#878687" />



</RelativeLayout>
